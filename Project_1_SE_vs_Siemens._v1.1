    "import numpy as np\n",
    "import pandas as pd\n",
    "from matplotlib import pyplot as plt\n",
    "\n",
    "# Import Data\n",
    "df = pd.read_csv(\"https://raw.githubusercontent.com/Strukov0107/TerVer_Ana_MatStat/master/Data_for_project/999999v5.csv\")\n",
    "df.head(5)\n",
    "# Prepare Data\n",
    "x = df['<DATE>'].values.tolist()\n",
    "y1 = df['<OPEN>'].values.tolist()\n",
    "#y2 = df['<SIEMENS>'].values.tolist()\n",
    "mycolors = ['tab:red', 'tab:blue', 'tab:green', 'tab:orange', 'tab:brown', 'tab:grey', 'tab:pink', 'tab:olive']      \n",
    "columns = ['Siemens', 'Schneider Electric']\n",
    "\n",
    "# Draw Plot \n",
    "fig, ax = plt.subplots(1, 1, figsize=(16,9), dpi= 80)\n",
    "ax.fill_between(x, y1=y1, y2=0, label=columns[1], alpha=0.5, color=mycolors[1], linewidth=2)\n",
    "\n",
    "#ax.fill_between(x, y1=y2, y2=0, label=columns[0], alpha=0.5, color=mycolors[0], linewidth=2)\n",
    "\n",
    "# Decorations\n",
    "ax.set_title('History of stock quotes of Schneider Electric company', fontsize=18)\n",
    "ax.set(ylim=[0, 30])\n",
    "ax.legend(loc='best', fontsize=12)\n",
    "plt.xticks(x[::200], fontsize=10, horizontalalignment='center')\n",
    "plt.yticks(np.arange(10.0, 160.0, 10.0), fontsize=10)\n",
    "plt.xlim(-10, x[-1])\n",
    "\n",
    "# Draw Tick lines  \n",
    "for y in np.arange(10.0, 160.0, 10.0):    \n",
    "    plt.hlines(y, xmin=0, xmax=len(x), colors='black', alpha=0.3, linestyles=\"--\", lw=0.5)\n",
    "\n",
    "# Lighten borders\n",
    "plt.gca().spines[\"top\"].set_alpha(0)\n",
    "plt.gca().spines[\"bottom\"].set_alpha(.3)\n",
    "plt.gca().spines[\"right\"].set_alpha(0)\n",
    "plt.gca().spines[\"left\"].set_alpha(.3)\n",
    "plt.show()\n",
